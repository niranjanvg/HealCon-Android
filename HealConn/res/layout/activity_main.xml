<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
    
    	<FrameLayout
    	    android:id="@+id/homescreen_logo_fragment_container"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    class="com.example.healconn.HomescreenLogo" />
    
    </LinearLayout>
 
    <View
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:background="@android:color/black"/>

    
	<LinearLayout
	    android:layout_height="0dp"
	    android:layout_width="match_parent"
	    android:layout_weight="5"
	    android:orientation="horizontal" >"
	    
    	<FrameLayout
        	android:id="@+id/userinfo_fragment_container"
        	android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	class="com.example.healconn.UserInfo" />
    
    	<!-- Vertical Seperationg Line between two fragments -->

    	<View
    		android:layout_width="1dp"
    		android:layout_height="fill_parent"
    		android:background="@android:color/black"/>


    	<FrameLayout
        	android:id="@+id/homescreen_fragment_container"
        	android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="2"
        	class="com.example.healconn.HomeScreen" />
    	
	</LinearLayout>

</LinearLayout>


