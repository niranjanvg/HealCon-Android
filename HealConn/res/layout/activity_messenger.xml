<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <fragment 
                android:id="@+id/mymessage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.example.healconn.MyMessage" />
            
            <fragment 
                android:id="@+id/uhsmessage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.example.healconn.UhsMessage" />
            
            <fragment 
                android:id="@+id/mymessage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.example.healconn.MyMessage" />
            
            <fragment 
                android:id="@+id/uhsmessage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.example.healconn.UhsMessage" />
            
            <fragment 
                android:id="@+id/mymessage3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.example.healconn.MyMessage" />
            
            <fragment 
                android:id="@+id/uhsmessage3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.example.healconn.UhsMessage" />
            
            <fragment 
                android:id="@+id/mymessage4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.example.healconn.MyMessage"  />
            
            <fragment 
                android:id="@+id/uhsmessage4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.example.healconn.UhsMessage" />
            
        </LinearLayout>
        
    </ScrollView> 
</LinearLayout>