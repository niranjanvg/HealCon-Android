<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <EditText
        android:id="@+id/message_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/message_reply_text"
        android:layout_alignTop="@+id/label_subject"
        android:layout_marginLeft="52dp"
        android:layout_toRightOf="@+id/label_subject"
        android:background="@drawable/border"
        android:ems="10" >

    </EditText>

    <EditText
        android:id="@+id/message_reply_text"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_below="@+id/message_subject"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:paddingTop="30dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/label_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/message_reply_text"
        android:layout_below="@+id/message_subject"
        android:layout_marginTop="16dp"
        android:text="Content:"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_new_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/message_reply_text"
        android:layout_below="@+id/message_reply_text"
        android:layout_marginTop="16dp"
        android:text="Send Message" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/message_reply_text"
        android:layout_alignRight="@+id/button_new_message"
        android:layout_below="@+id/button_new_message"
        android:layout_marginTop="12dp"
        android:src="@drawable/redcross" />

    <TextView
        android:id="@+id/label_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/label_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:text="Subject:"
        android:textSize="24sp" />

</RelativeLayout>